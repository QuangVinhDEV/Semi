{% extends 'base.html.twig' %}

{% block title %}Order Information{% endblock %}

{% block body %}
    <h1>Order Information</h1>

    <table class="table">
        <thead>
        <tr>
            <th>User</th>
            <th>Phone</th>
            <th>Province</th>
            <th>District</th>
            <th>Ward</th>
            <th>Street</th>
        </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            {% if address.user == app.user %}
                <tr>
                    <td>{{ address.user.username }}</td>
                    <td>{{ address.user.phone }}</td>
                    <td>{{ address.province }}</td>
                    <td>{{ address.district }}</td>
                    <td>{{ address.ward }}</td>
                    <td>{{ address.street }}</td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
